<Window x:Class="Project.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images.jpg"/>
        </Grid.Background>
        <Button Content="Login" HorizontalAlignment="Left" Height="59" Margin="247,319,0,0" VerticalAlignment="Top" Width="232" Click="Button_Click"/>
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Height="37" Margin="258,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="257"/>
        <Label Content="User Name" HorizontalAlignment="Left" Height="37" Margin="69,93,0,0" VerticalAlignment="Top" Width="112" Background="#FF8F7B7B"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="37" Margin="69,187,0,0" VerticalAlignment="Top" Width="112" Background="#FF8F7B7B"/>
        <PasswordBox x:Name="Passw"  HorizontalAlignment="Left" Height="37" Margin="258,187,0,0"  VerticalAlignment="Top" Width="257"/>
    </Grid>
</Window>
